DECLARE
  BILL_ID NUMBER := 20221;
  INVALID_TYPE EXCEPTION;
BEGIN
 IF LENGTH(BILL_ID) < 5  THEN
    RAISE INVALID_TYPE;
  ELSE
    DBMS_OUTPUT.PUT_LINE('BILL_ID: ' || BILL_ID);
  END IF;
EXCEPTION
  WHEN INVALID_TYPE THEN
    DBMS_OUTPUT.PUT_LINE('Invalid bill type!');
END;


DECLARE
  ITEM_NAME VARCHAR2(30) := 'latte';
  INVALID_TYPE EXCEPTION;
BEGIN
 IF LENGTH(ITEM_NAME) < 5  THEN
    RAISE INVALID_TYPE;
  ELSE
    DBMS_OUTPUT.PUT_LINE('ITEM_NAME: ' || ITEM_NAME);
  END IF;
EXCEPTION
  WHEN INVALID_TYPE THEN
    DBMS_OUTPUT.PUT_LINE('Invalid item name!');
END;
